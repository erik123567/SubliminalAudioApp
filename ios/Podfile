platform :ios, '15.0'
require 'fileutils'
require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

target 'SubliminalAudioApp' do
  config = use_native_modules!

  # Standard React Native integration
  use_react_native!(
    path: config[:reactNativePath],
    hermes_enabled: false,    # optional—disable Hermes if you want
    fabric_enabled: false
  )

  # 1) Delete RN’s bundled boost.podspec so it never loads
  pre_install do |installer|
    internal = File.expand_path(
      '../node_modules/react-native/third-party-podspecs/boost.podspec',
      __dir__
    )
    FileUtils.rm_f(internal) if File.exist?(internal)
  end

  # 2) Point CocoaPods at your local Boost podspec folder
  pod 'boost', path: './boost-local'

  post_install do |installer|
    # 3) Apply RN’s normal post-install
    react_native_post_install(installer)

    # 4) Force all pods (including Boost) to build for iOS 15.0+
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
        # Apple Silicon simulator arch fix
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      end
    end
  end
end

# 1) Patch boost.podspec immediately, before any pods are loaded:
require 'fileutils'
boost_spec = File.expand_path('../node_modules/react-native/third-party-podspecs/boost.podspec', __dir__)
if File.exist?(boost_spec)
  contents = File.read(boost_spec)
  # remove any line beginning with "s.checksum"
  filtered = contents.lines.reject { |l| l.strip.start_with?('s.checksum') }.join
  File.write(boost_spec, filtered)
end

# 2) Now define your Podfile as usual:
platform :ios, '14.0'
require_relative '../node_modules/react-native/scripts/react_native_pods'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'

target 'SubliminalAudioApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath]
  )

  post_install do |installer|
    # Standard RN post-install
    react_native_post_install(installer)

    # Work around Apple Silicon simulator arch issues
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      end
    end
  end
end
